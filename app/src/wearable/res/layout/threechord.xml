<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    android:background="@color/black"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <Button
        android:id="@+id/button_return"
        style="@android:style/DeviceDefault.ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0"
        android:text="@string/enter_symbol" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <android.inputmethodservice.ExtractEditText
            android:id="@+id/inputExtractEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:gravity="right"
            android:inputType="text"
            android:maxLines="1"
            android:text="sample"
            android:textAlignment="gravity"
            android:textSize="18sp" />
        <Space
            android:id="@+id/space_inputlead"
            android:layout_width="1dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <Button
            android:id="@+id/chord_one"
            style="@style/Theme.WearDiag"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/chord_button_top_right"
            android:paddingBottom="35sp"
            android:text="text "
            android:textSize="12sp"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/chord_two"
            style="@style/Theme.WearDiag"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/chord_button_top_left_right"
            android:paddingBottom="35sp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/chord_three"
            style="@style/Theme.WearDiag"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/chord_button_top_left"
            android:paddingBottom="35sp"
            android:text="text"
            android:textSize="12sp"
            tools:ignore="SmallSp" />

    </LinearLayout>

</LinearLayout>