<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/predicted_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="prediction"/>

    <TextView
        android:id="@+id/current_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/predicted_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1mm"
        android:text="TextView" />

    <LinearLayout
        android:id="@+id/horizon_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_text"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chord_one"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="5mm"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_backspace"
                android:layout_width="match_parent"
                android:layout_height="5mm"
                android:text="⌫" />

            <Button
                android:id="@+id/button_shift"
                android:layout_width="match_parent"
                android:layout_height="5mm"
                android:text="⇧" />

            <Button
                android:id="@+id/button_sym"
                android:layout_width="match_parent"
                android:layout_height="5mm"
                android:text="SYM" />

            <Button
                android:id="@+id/button_return"
                android:layout_width="match_parent"
                android:layout_height="5mm"
                android:text="⏎" />
        </LinearLayout>

        <Button
            android:id="@+id/chord_two"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/button_space"
        android:layout_width="match_parent"
        android:layout_height="5mm"
        android:layout_below="@+id/horizon_layout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="Button" />

</RelativeLayout>